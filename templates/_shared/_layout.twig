<!DOCTYPE html>
<html lang="en">

	<head>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
		<meta name="description" content="">
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Bangers&family=Carter+One&family=Contrail+One&family=Outfit:wght@100..900&display=swap" rel="stylesheet">

		<title>Just Home</title>
		{{ craft.vite.script('src/js/app.js', false) }}
	</head>
	<body>
		<div class="d-flex flex-column flex-md-row justify-content-between col-10 offset-1 align-items-center p-3 px-md-4  bg-white">
			<h1 class="my-0 mr-md-auto font-weight-normal ">
				<a href="{{url('')}}">
					<img src="{{ url('img/icons/logo.svg')}}" alt="Just Home logo" class="px-2 pb-2 c-immo-card__symbol">
					JustHome
				</a>
			</h1>
			<nav class="my-2 my-md-0 mr-md-3 nav nav-underline">
				{% set navigationItems = craft.entries.section('navigation').orderBy('level').all() %}
				{% for item in navigationItems %}

					<a class="px-2  nav-link  text-dark" href="{{ item.catlink }}">{{ item.title}}</a>
				{% endfor %}
			</nav>
		</div>

		{% block main %}{% endblock %}

		<!-- footer -->
		<div class="container-fluid u-background-grey  ">

			<footer class="c-footer ">
				<div class="row g-3 justify-content-center text-center align-items-center">

					<div class=" col-12 col-sm-4 col-md-3 c-footer__item text-center">
						<h1>
							<img src="{{ url('img/icons/logo.svg')}}" alt="Just Home logo" class=" px-2 pb-2 c-immo-card__symbol">
							JustHome
						</h1>
					</div>
					<div class="col-12 col-sm-4 col-md-3 c-footer__item  text-center">
						<nav class="my-2 my-md-0 mr-md-3 nav nav-underline c-footer__nav">
							{% set navigationItems = craft.entries.section('navigation').orderBy('level').all() %}
							{% for item in navigationItems %}

								<a class="px-2  nav-link  text-dark" href="{{ item.catlink }}">{{ item.title}}</a>
							{% endfor %}
						</nav>
					</div>
					<div class="col-12 col-sm-4 col-md-3 c-footer__item ">
						<div class="c-footer__socials">
							<p>Follow Us</p>
							<a href="#"><img src="{{url('img/icons/facebook.svg')}}" alt="facebook"></a>
							<a href="#"><img src="{{url('img/icons/instagram.svg')}}" alt="instagram"></a>
							<a href="#"><img src="{{url('img/icons/youtube.svg')}}" alt="youtube"></a>

						</div>
					</div>
				</div>
			</footer>

		</div>
	</body>
</html></body></html>
